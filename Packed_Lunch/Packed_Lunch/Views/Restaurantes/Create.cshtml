@model Packed_Lunch.Models.Restaurante
@{
    ViewBag.Title = "Cadastro Restaurante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
