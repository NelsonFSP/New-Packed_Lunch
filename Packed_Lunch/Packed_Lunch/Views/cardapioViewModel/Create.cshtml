@model Packed_Lunch.Models.cardapioViewModel
@{
    ViewBag.Title = "Cadastro empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="display:block;background-color:#d5d5d5;color:black;border-radius:4%;width:48%">
        <div style="margin-left:10%">
            <br />
            <h4>Cardápio</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Dia da semana", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Dia_semana, new SelectList(
                        new List<object>{
                            new{ value = 0 , text = "Segunda - feira"},
                            new{ value = 1 , text = "Terça - feira"},
                            new{ value = 2 , text = "Quarta - feira"},
                            new{ value = 3 , text = "Quinta - feira"},
                            new{ value = 4 , text = "Sexta - feira"}

                    },
                    "text",
                    "text",2))
                    @Html.ValidationMessageFor(model => model.Dia_semana, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
            <br />
        </div>

    </div>
}
