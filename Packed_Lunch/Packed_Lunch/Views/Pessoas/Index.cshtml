@model IEnumerable<Packed_Lunch.Models.Pessoa>

@{
    ViewBag.Title = "Lista de funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar funcionário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
      
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
       
        
        <td>
            @Html.ActionLink("Editar dados", "Edit", new { id=item.Id_Pessoa }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id_Pessoa }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Pessoa })
        </td>
    </tr>
}

</table>
